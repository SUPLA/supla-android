<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="AppTheme.Button">
    <item name="android:textAppearance">@style/AppTheme.TextAppearance.Button</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:minWidth">64dp</item>
    <item name="android:minHeight">44dp</item>
    <item name="android:elevation">1dp</item>
  </style>

  <style name="AppTheme.Button.Contained">
    <item name="android:background">@drawable/background_button_contained</item>
    <item name="android:textColor">@color/on_primary</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
  </style>

  <style name="AppTheme.Button.Outlined">
    <item name="android:background">@drawable/background_button_outlined</item>
    <item name="android:textColor">@color/primary</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
  </style>

  <style name="AppTheme.Button.Text">
    <item name="android:background">@drawable/background_button_text</item>
    <item name="android:textColor">@color/primary</item>
    <item name="android:paddingStart">8dp</item>
    <item name="android:paddingEnd">8dp</item>
  </style>
</resources>