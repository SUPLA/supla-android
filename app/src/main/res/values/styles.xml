<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/AppBar</item>
        <item name="toolbarNavigationButtonStyle">@style/SuplaToolbarNavigationButtonStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
      <item name="colorPrimary">#12a71e</item>
      <item name="brandPrimaryForegroundColor">#ffffff</item>
      <item name="brandPrimaryBackgroundColor">#12a71e</item>
      <item name="linkColor">#007AFF</item>
      <item name="labelColor">#7e8082</item>
      <item name="switcherBackgroundColor">@color/switcher_background_light</item>
    </style>

    <style name="MenuBarTitle">
        <item name="android:textColor">?attr/brandPrimaryForegroundColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">28sp</item>
    </style>    

    <style name="AppBar">
      <item name="titleTextAppearance">@style/title</item>
      <item name="android:background">?brandPrimaryBackgroundColor</item>
    </style>

    <style name="SuplaToolbarNavigationButtonStyle"
           parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
      <item name="android:paddingTop">10dp</item>
      <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="title" parent="@style/MenuBarTitle" />

    <style name="your_account">
      <item name="android:textSize">34sp</item>

      <item name="android:letterSpacing">-0.01</item>

      <item name="android:textColor">#000000</item>

    </style>

    <style name="StandaloneRoundedGreenButton"
           parent="Widget.AppCompat.Button.Borderless">
      <item name="android:background">@drawable/rounded_button</item>
      <item name="android:textColor">?brandPrimaryForegroundColor</item>
      <item name="android:textSize">17sp</item>
      <item name="android:textAllCaps">false</item>
    </style>

    <style name="LinkButton" parent="android:Widget.Button">
      <item name="android:background">@android:color/transparent</item>
      <item name="android:textColor">?linkColor</item>
      <item name="android:textSize">14sp</item>
      <item name="android:textAllCaps">false</item>
    </style>

    <style name="ChevronButton" parent="android:Widget.Button">
      <item name="android:background">@android:color/transparent</item>
      <item name="android:textColor">?labelColor</item>
      <item name="android:textSize">14sp</item>
      <item name="android:gravity">left|center_vertical</item>
      <item name="android:textAllCaps">false</item>
    </style>

    <style name="Switch" parent="">
      <item name="colorControlActivated">#00ff00</item>
      <item name="colorSwitchThumbNormal">#f1f1f1</item>
      <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="FormLabel" parent="">
      <item name="android:textColor">#B4B7BA</item>
    </style>

    <style name="SegmentedButtonGroup">
      <item name="android:background">@drawable/segment_group_background</item>
    </style>
    <style name="SegmentedButton">
      <item name="android:background">@drawable/segmented_button_background</item>
    </style>
</resources>
