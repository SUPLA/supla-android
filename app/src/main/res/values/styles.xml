<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="toolbarNavigationButtonStyle">@style/SuplaToolbarNavigationButtonStyle</item>
    <item name="windowActionBar">false</item>
    <item name="windowActionBarOverlay">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.Light" parent="AppTheme">
    <item name="colorPrimary">@color/supla_green</item>
    <item name="colorPrimaryDark">@color/supla_green</item>
    <item name="brandPrimaryForegroundColor">#ffffff</item>
    <item name="brandPrimaryBackgroundColor">@color/supla_green</item>
    <item name="linkColor">#007AFF</item>
    <item name="labelColor">#7e8082</item>
    <item name="switcherBackgroundColor">@color/switcher_background_light</item>
    <item name="drawerArrowStyle">@style/AppTheme.ToolbarArrow</item>
  </style>

  <style name="AppTheme.ToolbarArrow" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">@color/on_primary</item>
  </style>

  <style name="AppTheme.Light.Widget" parent="AppTheme.Light">
    <item name="colorPrimary">@color/supla_green</item>
    <item name="colorPrimaryDark">@color/layout_background</item>
  </style>

  <style name="MenuBarTitle" parent="AppTheme.TextAppearance.Subtitle1">
    <item name="android:textColor">?attr/brandPrimaryForegroundColor</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <style name="SuplaToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
  </style>

  <style name="title" parent="@style/MenuBarTitle" />

  <style name="your_account">
    <item name="android:textSize">34sp</item>

    <item name="android:letterSpacing">-0.01</item>

    <item name="android:textColor">#000000</item>

  </style>

  <style name="LinkButton" parent="android:Widget.Button">
    <item name="android:background">@android:color/transparent</item>
    <item name="android:textColor">?linkColor</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="ChevronButton" parent="android:Widget.Button">
    <item name="android:background">@android:color/transparent</item>
    <item name="android:textColor">?labelColor</item>
    <item name="android:textSize">14sp</item>
    <item name="android:gravity">left|center_vertical</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="Switch" parent="">
    <item name="colorControlActivated">@color/channel_btn</item>
    <item name="android:buttonTint">@color/channel_btn</item>
    <item name="colorSwitchThumbNormal">#f1f1f1</item>
    <item name="android:colorForeground">#42221f1f</item>
  </style>

  <style name="CheckBox" parent="">
    <item name="android:buttonTint">@color/channel_btn</item>
  </style>

  <style name="FormLabel" parent="">
    <item name="android:textColor">#B4B7BA</item>
  </style>

  <style name="SegmentedButtonGroup">
    <item name="android:background">@drawable/segment_group_background</item>
  </style>

  <style name="SegmentedButton">
    <item name="android:background">@drawable/segmented_button_background</item>
  </style>

  <style name="SegmentedButton.Texted">
    <item name="android:layout_margin">8dp</item>
    <item name="android:padding">4dp</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="Widget"></style>

  <style name="Widget.SegmentedButton">
    <item name="android:background">@drawable/segmented_button_widget_background</item>
  </style>

  <style name="Widget.SegmentedButton.Texted">
    <item name="android:layout_margin">8dp</item>
    <item name="android:padding">4dp</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="SuplaNumberPicker" parent="Theme.AppCompat.Light">
    <item name="colorControlNormal">@android:color/transparent</item>
  </style>
</resources>
