<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="toolbarNavigationButtonStyle">@style/SuplaToolbarNavigationButtonStyle</item>
    <item name="windowActionBar">false</item>
    <item name="windowActionBarOverlay">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:textColorSecondary">@color/background</item>
  </style>

  <style name="AppTheme.Light" parent="AppTheme">
    <item name="colorPrimary">@color/supla_green</item>
    <item name="colorPrimaryDark">@color/supla_green</item>
    <item name="brandPrimaryForegroundColor">#ffffff</item>
    <item name="brandPrimaryBackgroundColor">@color/supla_green</item>
    <item name="linkColor">#007AFF</item>
    <item name="labelColor">@color/gray</item>
    <item name="switcherBackgroundColor">@color/gray_light</item>
    <item name="drawerArrowStyle">@style/AppTheme.ToolbarArrow</item>
  </style>

  <style name="AppTheme.ToolbarArrow" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">@color/on_primary</item>
  </style>

  <style name="AppTheme.Light.Widget" parent="AppTheme.Light">
    <item name="colorPrimary">@color/supla_green</item>
    <item name="colorPrimaryDark">@color/layout_background</item>
  </style>

  <style name="MenuBarTitle" parent="AppTheme.TextAppearance.Subtitle1">
    <item name="android:textColor">?attr/brandPrimaryForegroundColor</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <style name="SuplaToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
  </style>

  <style name="AppTheme.EditText">
    <item name="android:background">@drawable/background_widget_configuration_field</item>
    <item name="android:maxLines">1</item>
    <item name="android:singleLine">true</item>
    <item name="android:textAppearance">@style/AppTheme.TextAppearance.Subtitle1</item>
    <item name="android:padding">12dp</item>
  </style>

  <style name="Switch" parent="">
    <item name="colorControlActivated">@color/primary</item>
    <item name="android:buttonTint">@color/primary</item>
    <item name="colorSwitchThumbNormal">#f1f1f1</item>
    <item name="android:colorForeground">#42221f1f</item>
  </style>

  <style name="CheckBox" parent="">
    <item name="android:buttonTint">@color/primary</item>
  </style>

  <style name="SegmentedButtonGroup">
    <item name="android:background">@drawable/segment_group_background</item>
  </style>

  <style name="SegmentedButtonGroupDayOnly">
    <item name="android:background">@drawable/segment_group_background_day_only</item>
  </style>

  <style name="SegmentedButton">
    <item name="android:background">@drawable/segmented_button_background</item>
  </style>

  <style name="Widget" />

  <style name="Widget.SegmentedButton">
    <item name="android:background">@drawable/segmented_button_widget_background</item>
  </style>

  <style name="Widget.SegmentedButton.Texted">
    <item name="android:layout_margin">8dp</item>
    <item name="android:padding">4dp</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="SuplaNumberPicker" parent="Theme.AppCompat.Light">
    <item name="colorControlNormal">@android:color/transparent</item>
    <item name="android:textColorPrimary">@color/on_background</item>
  </style>
</resources>
