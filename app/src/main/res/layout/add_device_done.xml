<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/primary_container">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/wizard_done_txt1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imageView3"
      android:layout_centerHorizontal="true"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="@dimen/distance_default"
      android:layout_marginRight="20dp"
      android:gravity="center_horizontal"
      android:text="@string/wizard_done"
      android:textColor="@android:color/white"
      android:textSize="18dp"
      android:fontFamily="@font/quicksand_regular" />

    <ImageView
      android:id="@+id/imageView3"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="30dp"
      android:background="@drawable/wizard_ok"
      tools:ignore="ContentDescription" />

    <LinearLayout
      android:id="@+id/llDeviceParams"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/flDeviceParams"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:background="@android:color/white"
      android:orientation="horizontal"
      android:weightSum="1">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
          android:id="@+id/wizard_done_txt3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="right"
          android:text="@string/wizard_iodev_name"
          android:textColor="@android:color/black"
          android:textSize="11dp"
          android:textStyle="bold"
          android:fontFamily="@font/open_sans_regular" />

        <TextView
          android:id="@+id/wizard_done_txt4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="right"
          android:text="@string/wizard_iodev_firmware"
          android:textColor="@android:color/black"
          android:textSize="11dp"
          android:textStyle="bold"
          android:fontFamily="@font/open_sans_regular" />

        <TextView
          android:id="@+id/wizard_done_txt5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="right"
          android:text="@string/wizard_iodev_mac"
          android:textColor="@android:color/black"
          android:textSize="11dp"
          android:textStyle="bold"
          android:fontFamily="@font/open_sans_regular" />

        <TextView
          android:id="@+id/wizard_done_txt6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="right"
          android:text="@string/wizard_iodev_laststate"
          android:textColor="@android:color/black"
          android:textSize="11dp"
          android:textStyle="bold"
          android:fontFamily="@font/open_sans_regular" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
          android:id="@+id/wizard_done_iodev_name"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:gravity="left"
          android:textColor="@android:color/black"
          android:textSize="11dp"
          android:fontFamily="@font/open_sans_regular" />

        <TextView
          android:id="@+id/wizard_done_iodev_firmware"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:gravity="left"
          android:textColor="@android:color/black"
          android:textSize="11dp"
          android:fontFamily="@font/open_sans_regular" />

        <TextView
          android:id="@+id/wizard_done_iodev_mac"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:gravity="left"
          android:textColor="@android:color/black"
          android:textSize="11dp"
          android:fontFamily="@font/open_sans_regular" />

        <TextView
          android:id="@+id/wizard_done_iodev_laststate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:background="#FFEB3B"
          android:gravity="left"
          android:textColor="@android:color/black"
          android:textSize="11dp"
          android:fontFamily="@font/open_sans_regular" />
      </LinearLayout>
    </LinearLayout>

    <FrameLayout
      android:id="@+id/flDeviceParams"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/wizard_done_txt1"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="@dimen/distance_default"
      android:layout_marginRight="20dp"
      android:background="@android:color/white">

      <TextView
        android:id="@+id/wizard_done_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="@string/wizard_iodev_data"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:fontFamily="@font/open_sans_regular" />
    </FrameLayout>

    <TextView
      android:id="@+id/wizard_done_txt9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/llDeviceParams"
      android:layout_centerHorizontal="true"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="@dimen/distance_default"
      android:layout_marginRight="20dp"
      android:gravity="center_horizontal"
      android:text="@string/wizard_done_explentations"
      android:textAppearance="@style/AppTheme.TextAppearance.Body2"
      android:textColor="@android:color/white"
      android:textSize="14dp" />

  </RelativeLayout>
</ScrollView>