<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menubar">

    <CheckBox
        android:id="@+id/wizard_cb_save_pwd"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/wizard_password"
        android:layout_alignStart="@+id/wizard_password"
        android:layout_below="@+id/wizard_password"
        android:layout_marginTop="10dp"
        android:buttonTint="@android:color/white"
        android:text="@string/wizard_remember_passwd"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/wizard_wifi_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wizard_step2_txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:padding="5dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/wizard_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wizard_wifi_list"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/notification_bg"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/wizard_step2_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="34dp"
        android:gravity="center_horizontal"
        android:text="@string/wizard_step2_txt1"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/wizard_step2_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wizard_cb_save_pwd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/wizard_step2_txt3"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:background="@drawable/wifi"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/wizard_look_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/wizard_cb_save_pwd"
        android:layout_alignRight="@+id/wizard_password"
        android:layout_centerHorizontal="false"
        android:layout_marginBottom="-5dp"
        android:background="@drawable/look" />


</RelativeLayout>