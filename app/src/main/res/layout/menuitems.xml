<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top">

    <RelativeLayout
        android:id="@+id/menu_inside_layout"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@color/menubar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/menuseparator"
            android:alpha="0.4" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/menuitem_settings"
            android:layout_gravity="left|top"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            android:background="@drawable/settings"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="1dp" />

        <View
            android:layout_below="@id/menuitem_settings"
            android:layout_toRightOf="@+id/menuitem_settings"
            android:layout_height="0.25dp"
            android:layout_width="wrap_content"
            android:background="@color/menuseparator"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="16dp"
            android:alpha="0.4"
            android:id="@+id/settings_line" />

        <Button
            android:id="@+id/menuitem_add"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/menuitem_settings"
            android:layout_alignStart="@+id/menuitem_settings"
            android:layout_below="@id/menuitem_settings"
            android:layout_gravity="left"
            android:layout_marginTop="1dp"
            android:background="@drawable/add_device" />

        <View
            android:layout_below="@id/menuitem_add"
            android:layout_toRightOf="@+id/menuitem_add"
            android:layout_height="0.25dp"
            android:layout_width="wrap_content"
            android:background="@color/menuseparator"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="16dp"
            android:alpha="0.4"
            android:id="@+id/add_line" />


        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/menuitem_about"
            android:layout_gravity="left"
            android:clickable="true"
            android:background="@drawable/info"
            android:layout_below="@id/menuitem_add"
            android:layout_alignLeft="@+id/menuitem_add"
            android:layout_alignStart="@+id/menuitem_add"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="1dp" />

        <View
            android:layout_below="@id/menuitem_about"
            android:layout_toRightOf="@+id/menuitem_about"
            android:layout_height="0.25dp"
            android:layout_width="wrap_content"
            android:background="@color/menuseparator"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="16dp"
            android:alpha="0.4"
            android:id="@+id/about_line" />


        <Button
            android:id="@+id/menuitem_donate"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/menuitem_about"
            android:layout_alignStart="@+id/menuitem_about"
            android:layout_below="@id/menuitem_about"
            android:layout_gravity="left"
            android:layout_marginTop="1dp"
            android:background="@drawable/donate"
            android:clickable="true" />

        <View
            android:id="@+id/donate_line"
            android:layout_width="wrap_content"
            android:layout_height="0.25dp"
            android:layout_below="@id/menuitem_donate"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="0dp"
            android:layout_toRightOf="@+id/menuitem_donate"
            android:alpha="0.4"
            android:background="@color/menuseparator" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/menuitem_help"
            android:layout_gravity="left|top"
            android:clickable="true"
            android:background="@drawable/help"
            style="?android:attr/borderlessButtonStyle"
            android:layout_below="@+id/donate_line"
            android:layout_toLeftOf="@+id/donate_line"
            android:layout_toStartOf="@+id/donate_line" />

        <View
            android:layout_below="@id/menuitem_help"
            android:layout_height="0.25dp"
            android:layout_width="wrap_content"
            android:background="@color/menuseparator"
            android:layout_marginRight="0dp"
            android:alpha="0.4" />

        <Button
            android:layout_width="match_parent"
            android:layout_below="@id/menuitem_help"
            android:layout_height="35dp"
            android:id="@+id/btn_homepage"
            android:background="@color/menubar"
            android:text="@string/homepage"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="4dp"
            android:textSize="12sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/btn_help"
            android:background="@color/menubar"
            android:text="@string/help"
            android:textColor="@android:color/white"
            android:layout_below="@+id/donate_line"
            android:layout_alignLeft="@+id/donate_line"
            android:layout_alignStart="@+id/donate_line"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignBottom="@+id/menuitem_help"
            android:layout_marginLeft="5dp"
            android:gravity="center|left"
            android:layout_marginTop="1dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_about"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/menuitem_about"
            android:layout_alignLeft="@+id/about_line"
            android:layout_alignStart="@+id/about_line"
            android:layout_below="@+id/add_line"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:background="@color/menubar"
            android:gravity="center|left"
            android:text="@string/about"
            android:textColor="@android:color/white"
            android:textSize="15sp" />


        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/btn_donate"
            android:background="@color/menubar"
            android:text="@string/donate_title"
            android:textColor="@android:color/white"
            android:gravity="center|left"
            android:layout_alignBottom="@+id/menuitem_donate"
            android:layout_alignLeft="@+id/donate_line"
            android:layout_alignStart="@+id/donate_line"
            android:layout_below="@+id/about_line"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="5dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_add"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/menuitem_add"
            android:layout_alignLeft="@+id/add_line"
            android:layout_alignStart="@+id/add_line"
            android:layout_below="@+id/settings_line"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:background="@color/menubar"
            android:gravity="center|left"
            android:text="@string/add_device"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/btn_settings"
            android:background="@color/menubar"
            android:text="@string/settings"
            android:textColor="@android:color/white"
            android:gravity="center|left"
            android:layout_alignLeft="@+id/settings_line"
            android:layout_alignStart="@+id/settings_line"
            android:layout_above="@+id/settings_line"
            android:layout_alignTop="@+id/menuitem_settings"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="5dp"
            android:textSize="15sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_empty_space"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/menu_inside_layout"
        android:layout_alignParentBottom="true"
        android:text=""/>

</RelativeLayout>