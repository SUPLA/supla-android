<?xml version="1.0" encoding="utf-8" ?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
    <import type="android.view.View" />
    <variable
	name="viewModel"
	type="org.supla.android.cfg.CfgViewModel" />
  </data>
  
  <LinearLayout
      android:id="@+id/cfg"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="@color/activity_bg">
    <ScrollView
	android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <RelativeLayout
          android:id="@+id/cfg_content"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="top"
          android:layout_centerHorizontal="true">
        <include
            android:id="@+id/cfg_basic"
            android:visibility="@{viewModel.cfgData.isAdvanced ? View.GONE : View.VISIBLE}"
            layout="@layout/activity_cfg_basic" />
        <include
            android:id="@+id/cfg_advanced"
            android:visibility="@{viewModel.cfgData.isAdvanced ? View.VISIBLE : View.GONE}"
            layout="@layout/activity_cfg_advanced" />
      </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
      <CheckBox
          android:id="@+id/cfg_cb_advanced"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginBottom="10dp"
          android:buttonTint="@color/channel_btn"
          android:checked="@={viewModel.cfgData.isAdvanced}"
          android:text="@string/advanced_settings"
	  android:textSize="@dimen/default_text_size"
          />
    </RelativeLayout>
  </LinearLayout>
</layout>
