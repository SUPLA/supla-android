<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRgbVLCalibration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vl_settings_bg">

    <Button
        android:id="@+id/vlBtnInfo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="170dp"
        android:background="@drawable/vlinfo"
        android:visibility="visible" />

    <Button
        android:id="@+id/vlBtnRestore"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/vlrestore"
        android:visibility="visible" />

    <Button
        android:id="@+id/vlBtnOK"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btnok"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/vlcfgLL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vl_cfg_mode"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_tab_background"
            android:orientation="horizontal"
            android:padding="2dp">

            <Button
                android:id="@+id/vlCfgDmAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_sel_btn"
                android:text="@string/vl_cfg_auto"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/vlCfgDm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-1dp"
                android:layout_marginRight="-1dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/vl_cfg_mode1" />

            <Button
                android:id="@+id/vlCfgDm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="-1dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/vl_cfg_mode2" />

            <Button
                android:id="@+id/vlCfgDm3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/vl_cfg_mode3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vlcfgLL2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vlcfgLL1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vl_cfg_boost"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_tab_background"
            android:orientation="horizontal"
            android:padding="2dp">

            <Button
                android:id="@+id/vlCfgBoostAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_sel_btn"
                android:text="@string/vl_cfg_auto"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/vlCfgBoostYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-1dp"
                android:layout_marginRight="-1dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/vl_cfg_yes" />

            <Button
                android:id="@+id/vlCfgBoostNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/vl_cfg_no" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vlcfgLL3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vlcfgLL2"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-1dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/vlCfgOpRange"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/vl_tab"
                android:text="@string/vl_cfg_op_range"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/vlCfgBoost"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/vl_cfg_boost"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@android:color/white"
            android:orientation="vertical">


            <org.supla.android.SuplaRangeCalibrationWheel
                android:id="@+id/vlCfgCalibrationWheel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="76dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/vprosmart" />
</RelativeLayout>
