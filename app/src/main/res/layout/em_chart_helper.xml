<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/chart_marker_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvmTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="16:32"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/chart_marker_text"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvmSelLabel"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/chart_marker_text"
            android:textSize="12dp"
            android:text="@string/em_chart_phase_n"
            />

        <TextView
            android:id="@+id/tvmSelValue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="1124,34kWh"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/chart_marker_text"
            android:textSize="12dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvmSelValue2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="1124,34 zł"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/chart_marker_text"
            android:visibility="visible"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/tvmAllLabel"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/em_chart_all_phases"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/chart_marker_text"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/tvmValue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="1124,34kWh"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/chart_marker_text"
            android:textSize="12dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvmValue2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="1124,34 zł"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/chart_marker_text"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>
